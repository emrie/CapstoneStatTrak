doctype html

html
  head
    meta(charset = 'utf-8')
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Stat Trak Stats
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/scrolling-nav.css', rel='stylesheet')
    link(href='/stylesheets/style.css' rel = 'stylesheet')

  body(id="page-top" datadata-spy="scroll" data-target=".navbar-fixed-top")
    nav(class="navbar navbar-toggleable-md navbar-light back-inverse")
      div(class="container")
        button(class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span(class = "navbar-toggler-icon")
        img(class="logo" src='/favicon.ico')
        a(class="navbar-brand" href="/mainpage") StatTrak
        div(class="collapse navbar-collapse" id="navbarNav")
          ul(class="navbar-nav")
            li(class="nav-item")
              a(class="nav-link" href="StatTrak") Record Game
            li(class="nav-item")
              a(class="nav-link" href="stats") Stats
            li(class="nav-item")
              a(class="nav-link" href="account") Account

    section(id="intro" class="intro-section")
    div(class="container")
      h1(class="team_logo") #{team}
      div(class="row")
        div(class= "col-md-12 col-sm-12")
          table(class='table table-inverse')
            thead
              tbody
                tr(class="record-row")
                  th(class="record-item") Name
                  th(class="record-item") Number
                  th(class="record-item") 1Pt
                  th(class="record-item") 2Pts
                  th(class="record-item") 3Pts
                each player in players
                  tr(class="record-row")
                    td(class="record-item") #{player.name.last} , #{player.name.first}
                    td(class="record-item") #{player.number}
                    td(class="record-item") #{player.pt1}
                    td(class="record-item") #{player.pt2}
                    td(class="record-item") #{player.pt3}
